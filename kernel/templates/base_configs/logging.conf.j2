version: 1
disable_existing_loggers: false

formatters:
  standard:
    format: '%(asctime)s [%(levelname)s] %(name)s: %(message)s'

handlers:
  file:
    class: logging.handlers.RotatingFileHandler
    level: INFO
    formatter: standard
    filename: "{{ monitoring_base_dir }}/logs/monitoring.log"
    maxBytes: 10485760
    backupCount: {{ log_retention_days }}
