maintenance:
  scheduled_tasks:
    daily:
      - cleanup_old_logs
      - rotate_metrics
      - check_disk_space
      
    weekly:
      - compress_old_data
      - update_certificates
      - verify_backups
      
    monthly:
      - system_updates
      - performance_optimization
      - security_audit
      
  automation:
    windows:
      start_time: "01:00"
      max_duration: "2h"
      timezone: "UTC"
      
    conditions:
      pre_check:
        - disk_space > 20%
        - system_load < 80%
        - no_critical_alerts
        
  resource_management:
    cleanup_policies:
      logs:
        max_age: 30d
        max_size: 10GB
      metrics:
        retention: 90d
        compression: true
