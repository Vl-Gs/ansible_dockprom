dependencies:
  required_packages:
    base:
      - docker
      - docker-compose
      - python3
      - curl
      - jq
    
    monitoring:
      - prometheus
      - node_exporter
      - alertmanager
      
    database:
      - influxdb
      - mongodb
      
  version_requirements:
    docker: ">= 20.10.0"
    docker_compose: ">= 2.0.0"
    python: ">= 3.8.0"
    
  service_dependencies:
    grafana:
      - prometheus
    alertmanager:
      - prometheus
    node_exporter:
      - prometheus

  compatibility:
    os_support:
      - Ubuntu: ">= 20.04"
      - Debian: ">= 11"
      - CentOS: ">= 8"
